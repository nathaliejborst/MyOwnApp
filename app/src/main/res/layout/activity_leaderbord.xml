    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nathalie.myownapp.LeaderbordActivity">

    <TextView
        android:id="@+id/leaderboard_tv"
        android:layout_width="match_parent"
